<?xml version="1.0"?>
<launch>
    <!-- Posix SITL TC launch script -->
    <!-- Launches Only TC SITL. This can be used by external projects -->

    <!-- TC config arguments -->
    <arg name="est" default="ekf2"/>
    <arg name="vehicle" default="iris"/>
    <arg name="ID" default="0"/>
    <arg name="interactive" default="true"/>

    <env name="TC_SIM_MODEL" value="gazebo-classic_$(arg vehicle)" />
    <arg unless="$(arg interactive)" name="tc_command_arg1" value="-d"/>
    <arg     if="$(arg interactive)" name="tc_command_arg1" value=""/>
    <node name="sitl_$(arg ID)" pkg="tc" type="tc" output="screen" args="$(find tc)/build/tc_sitl_default/etc -s etc/init.d-posix/rcS -i $(arg ID) $(arg tc_command_arg1)">
    </node>
</launch>
